{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "strict": true,
    "target": "es2015",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "lib": ["esnext", "ES6"]
  },
  "include": [
    "src/**/*"
  ],
}
